{
    "variables" : {
        "hostname" : "ubuntu-server",
        "username" : "dev",
        "password" : "password",
        "iso_url" : "http://releases.ubuntu.com/14.04/ubuntu-14.04.3-server-amd64.iso",
        "iso_checksum" : "9e5fecc94b3925bededed0fdca1bd417",
        "preseed" : "preseed.cfg",
        "disksize" : "10000"
    },
    "builders" : [
        {
            "name" : "ubuntu-14.04.3-server-amd64",
            "type" : "virtualbox-iso",
            "guest_os_type" : "Ubuntu_64",
            "disk_size" : "{{user `disksize`}}",
            "headless" : true,
            "iso_url" : "{{user `iso_url`}}",
            "iso_checksum" : "{{user `iso_checksum`}}",
            "iso_checksum_type" : "md5",
            "http_directory" : "share",
            "http_port_min" : 9001,
            "http_port_max" : 9001,
            "ssh_username" : "{{user `username` }}",
            "ssh_password" : "{{user `password` }}",
            "ssh_timeout" : "20m",
            "output_directory" : "builds/{{user `hostname`}}",
            "vboxmanage" : [
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--vram",
                    "32"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--memory",
                    "512"
                ],
                [
                    "modifyvm",
                    "{{.Name}}",
                    "--cpus",
                    "1"
                ]
            ],
            "shutdown_command" : "echo {{user `password`}} | sudo -S shutdown -P now",
            "boot_command" : [
                "<esc><wait>",
                "<esc><wait>",
                "<enter><wait>",
                "/install/vmlinuz ",
                "noapic ",
                "auto ",
                "preseed/url=http://{{ .HTTPIP }}:{{ .HTTPPort }}/{{user `preseed`}} ",
                "debian-installer=en_US auto locale=en_US kbd-chooser/method=de ",
                "hostname={{user `hostname`}} ",
                "fb=false debconf/frontend=noninteractive ",
                "netcfg/get_hostname string {{user `hostname`}} ",
                "netcfg/get_domain string {{user `hostname`}}.local ",
                "keyboard-configuration/modelcode=SKIP keyboard-configuration/layout=German ",
                "keyboard-configuration/variant=German console-setup/ask_detect=false ",
                "initrd=/install/initrd.gz ",
                "-- ",
                "<enter>"
            ]
        }
    ],
    "provisioners" : [
    ],
    "post-processors" : [
        [
            {
                "type" : "vagrant",
                "output" : "{{.BuildName}}_{{.Provider}}.box"
            }
        ]
    ]
}
